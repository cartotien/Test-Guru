<tr>
  <td><%= question.body %></td>
  <td>
      <td><%= button_to 'Show', question_path(question.id), :method => :get %></td>
      <td><%= button_to 'Edit', edit_question_path(question.id), :method => :get %></td>
      <td><%= button_to 'Delete', question_path(question.id), :method => :delete, data: { confirm: 'Are you sure?' } %></td>
  </td> 
</tr>
<tr>
  <% question.answers.each do |answer| %>
    <td><%= answer.body %></td>
  <% end %>
</tr>
