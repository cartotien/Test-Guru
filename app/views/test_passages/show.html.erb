<h1>Passing the <%= @test_passage.test.title %></h1><hr>
<div>
  <span>Level: <%= @test_passage.test.level %></span>
  <span>Category: <%= @test_passage.test.category.title %></span>
</div><br>

<p>Question <%= @test_passage.current_question_number %> out of <%= @test_passage.number_of_questions %></p>

<b><%= @test_passage.current_question.body %></b>
<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form|%>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids: #{b.object.id}"%>
      <%= b.label %>
    </p>
  <% end %>
  <%= link_to t('.gist_question'), gist_test_passage_path(@test_passage), method: :post %>
  <p><%= form.submit "Next" %></p>
<% end %>

