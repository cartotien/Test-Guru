<div class='container'>
  <%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/error_handle', resource: @test %>
  <div class="form">

    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %><br>

    <%= form.label :level %>
    <%= form.number_field :level, class: 'form-control' %><br>
  
    <div><%= form.label :category %></div>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
    
    <div class='mt-2'>
      <%= link_to t('back'), admin_tests_path %>
      <%= form.submit %>
    </div>
  </div>
  <% end %>
</div>
